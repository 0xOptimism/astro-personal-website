---
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;

// Umami analytics (privacy-friendly, no cookies). Set PUBLIC_UMAMI_WEBSITE_ID in production.
// Forks can use their own ID via env or leave unset to disable.
const umamiWebsiteId = import.meta.env.PUBLIC_UMAMI_WEBSITE_ID ?? '8f97ce4f-3008-48d3-bf4d-5ad7c34f7266';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Distinctive typography: display + refined body (SKILL) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,500;0,8..60,600;0,8..60,700;1,8..60,400&family=Syne:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- Umami analytics: privacy-friendly, no cookies, GDPR-compliant -->
    <script defer src="https://cloud.umami.is/script.js" data-website-id={umamiWebsiteId}></script>
  </head>
  <body class="grain">
    <slot />
  </body>
</html>

<style is:global>
  code {
    font-family: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo, Monaco, monospace;
  }
</style>
