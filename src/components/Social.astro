---
import data from '../data/data.json';
import Icon from './Icon.astro';

const { socials } = data;

interface SocialItem {
  icon: string;
  link: string;
}
---

<footer class="flex flex-wrap items-center justify-center gap-8 border-t border-[var(--color-surface-elevated)] pt-8">
  {
    socials.map((item: SocialItem) => (
      <a
        href={item.link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex h-12 w-12 items-center justify-center rounded-full border border-[var(--color-surface-elevated)] text-[var(--color-text-muted)] transition-all hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] hover:scale-110"
        aria-label={item.icon === 'linkedin' ? 'LinkedIn' : 'GitHub'}
      >
        <Icon item={item} size="lg" />
      </a>
    ))
  }
</footer>
