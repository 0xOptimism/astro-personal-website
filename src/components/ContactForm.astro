---
const title = "Contact Me";
const getInTouchStart = "Get in touch via this form or contact me directly at ";
const email = "hello@yannis.dev";
const emailLabel = "Your email";
const messageLabel = "Your message";
const nameLabel = "Your name";
---

<section>
  <h2 id="contact-heading" class="reveal font-display text-2xl font-bold tracking-tight sm:text-3xl">
    {title}
  </h2>
  <p class="reveal reveal-delay-1 mt-4 font-body text-[var(--color-text-muted)]">
    {getInTouchStart}
    <a class="link-accent" href={`mailto:${email}`}>{email}</a>
  </p>
  <form
    action="https://formspree.io/f/xnqyqnbl"
    method="POST"
    class="reveal reveal-delay-2 mt-8 space-y-6"
  >
    <label class="block">
      <span class="mb-2 block font-display text-sm font-medium text-[var(--color-text-muted)]">
        {nameLabel}
      </span>
      <input
        type="text"
        name="name"
        required
        aria-required="true"
        class="w-full rounded-[var(--radius-sm)] border border-[var(--color-surface-elevated)] bg-[var(--color-surface)] px-4 py-3 font-body text-[var(--color-text)] placeholder:text-[var(--color-text-muted)] transition-colors focus:border-[var(--color-accent)] focus:outline-none focus:ring-1 focus:ring-[var(--color-accent)]"
        placeholder="Your name"
      />
    </label>
    <label class="block">
      <span class="mb-2 block font-display text-sm font-medium text-[var(--color-text-muted)]">
        {emailLabel}
      </span>
      <input
        type="email"
        name="email"
        required
        class="w-full rounded-[var(--radius-sm)] border border-[var(--color-surface-elevated)] bg-[var(--color-surface)] px-4 py-3 font-body text-[var(--color-text)] placeholder:text-[var(--color-text-muted)] transition-colors focus:border-[var(--color-accent)] focus:outline-none focus:ring-1 focus:ring-[var(--color-accent)]"
        placeholder="you@example.com"
      />
    </label>
    <label class="block">
      <span class="mb-2 block font-display text-sm font-medium text-[var(--color-text-muted)]">
        {messageLabel}
      </span>
      <textarea
        name="message"
        rows={5}
        class="w-full resize-y rounded-[var(--radius-sm)] border border-[var(--color-surface-elevated)] bg-[var(--color-surface)] px-4 py-3 font-body text-[var(--color-text)] placeholder:text-[var(--color-text-muted)] transition-colors focus:border-[var(--color-accent)] focus:outline-none focus:ring-1 focus:ring-[var(--color-accent)]"
        placeholder="Your message..."
      />
    </label>
    <button
      type="submit"
      class="mt-4 rounded-[var(--radius-md)] bg-[var(--color-accent)] px-6 py-3 font-display text-sm font-semibold text-[var(--color-bg)] transition-transform hover:scale-[1.02] active:scale-[0.98]"
    >
      Send
    </button>
  </form>
</section>
