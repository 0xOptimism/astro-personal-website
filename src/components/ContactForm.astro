---
const title = "Contact Me";
const getInTouchStart = "Get in touch via this form or contact me directly at ";
const email = "hello@yannis.dev";
const emailLabel = "Your email";
const messageLabel = "Your message";
const nameLabel = "Your name";
---

<section>
  <h2 id="contact-heading" class="reveal font-display text-2xl font-bold tracking-tight sm:text-3xl">
    {title}
  </h2>
  <p class="reveal reveal-delay-1 mt-4 font-body text-(--color-text-muted)">
    {getInTouchStart}
    <a class="link-accent" href={`mailto:${email}`}>{email}</a>
  </p>
  <form
    action="https://formspree.io/f/xnqyqnbl"
    method="POST"
    class="reveal reveal-delay-2 mt-8 space-y-6"
  >
    <label class="block">
      <span class="mb-2 block font-display text-sm font-medium text-(--color-text-muted)">
        {nameLabel}
      </span>
      <input
        type="text"
        name="name"
        required
        aria-required="true"
        class="w-full rounded-sm border border-(--color-surface-elevated) bg-(--color-surface) px-4 py-3 font-body text-(--color-text) placeholder:text-(--color-text-muted) transition-colors focus:border-(--color-accent) focus:outline-none focus:ring-1 focus:ring-(--color-accent)"
        placeholder="Your name"
      />
    </label>
    <label class="block">
      <span class="mb-2 block font-display text-sm font-medium text-(--color-text-muted)">
        {emailLabel}
      </span>
      <input
        type="email"
        name="email"
        required
        class="w-full rounded-sm border border-(--color-surface-elevated) bg-(--color-surface) px-4 py-3 font-body text-(--color-text) placeholder:text-(--color-text-muted) transition-colors focus:border-(--color-accent) focus:outline-none focus:ring-1 focus:ring-(--color-accent)"
        placeholder="you@example.com"
      />
    </label>
    <label class="block">
      <span class="mb-2 block font-display text-sm font-medium text-(--color-text-muted)">
        {messageLabel}
      </span>
      <textarea
        name="message"
        rows={5}
        class="w-full resize-y rounded-sm border border-(--color-surface-elevated) bg-(--color-surface) px-4 py-3 font-body text-(--color-text) placeholder:text-(--color-text-muted) transition-colors focus:border-(--color-accent) focus:outline-none focus:ring-1 focus:ring-(--color-accent)"
        placeholder="Your message..."
      />
    </label>
    <button
      type="submit"
      class="mt-4 rounded-md bg-(--color-accent-warm) px-6 py-3 font-display text-sm font-semibold text-(--color-bg) transition-transform hover:scale-[1.02] active:scale-[0.98]"
    >
      Send
    </button>
  </form>
</section>
