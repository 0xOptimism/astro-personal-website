---
import data from '../data/data.json';

const title = `The timeline of my developer journey`;

const { timeline }: { timeline: Timeline } = data;

interface Year {
  title: string;
  description: string;
}

interface Timeline {
  [key: string]: Year[];
}
---

<section class='py-4'>
  <p class='text-lg font-semibold'>{title}</p>
  <ol class='relative border-l border-gray-200 dark:border-gray-700 my-5'>
    {
      Object.keys(timeline)
        .reverse()
        .map((year: string) => (
          <li class='mb-10 ml-4'>
            <div class='absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700' />
            <time class='mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500'>
              {year}
            </time>
            {timeline[year].map((item: Year) => (
              <>
                <h3 class='text-lg font-semibold text-gray-800 mb-3'>
                  {item.title}
                </h3>
                <p class='mb-4 text-base font-normal text-gray-700 tracking-wider  mb-5'>
                  {item.description}
                </p>
              </>
            ))}
          </li>
        ))
    }
  </ol>
</section>
