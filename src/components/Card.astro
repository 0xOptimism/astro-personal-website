---
const { item } = Astro.props;
---

<div
  class="md:w-11/12 sm:w-full h-auto bg-white border border-gray-100 mb-2.5 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 ease-in-out"
>
  <img
    class="rounded-t-lg object-cover object-center md:h-48 sm:h-80 w-full"
    src={item.image}
    alt={item.alts}
    style={{ objectFit: "cover" }}
  />
  <div class="p-5">
    <h5 class="mb-4 text-2xl font-bold tracking-tight text-gray-900">
      {item.title}
    </h5>
    <p class="mb-5 font-normal text-gray-700">
      {item.description}
    </p>
    {
      item.link && (
        <a
          href={item.link}
          target="_blank"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-md hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 transition-colors duration-300"
        >
          Visit
          <svg
            aria-hidden="true"
            class="w-4 h-4 ml-2 -mr-1"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      )
    }
  </div>
</div>
