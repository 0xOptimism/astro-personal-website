---
import data from '../data/data.json';
import Icon from './Icon.astro';

const title = "Tech I enjoy building with";
const { skills } = data;

interface Item {
  name: string;
  icon: string;
  color: string;
}
---

<section>
  <h2 id="skills-heading" class="reveal font-display text-2xl font-bold tracking-tight sm:text-3xl">
    {title}
  </h2>
  <div class="mt-8 flex flex-wrap gap-3">
    {
      skills.map((item: Item, i: number) => {
        const delay = Math.min(i * 0.05 + 0.2, 0.9);
        return (
          <div
            class="reveal flex items-center gap-2.5 rounded-md border border-(--color-surface-elevated) bg-(--color-surface) px-4 py-3 transition-all duration-300 hover:scale-[1.02] hover:border-(--color-accent-dim) hover:shadow-[0_0_24px_var(--color-accent-dim)]"
            style={`animation-delay: ${delay}s`}
          >
            <span class="flex items-center justify-center">
              <Icon item={item} />
            </span>
            <span class="font-body text-sm font-medium text-(--color-text)">{item.name}</span>
          </div>
        );
      })
    }
  </div>
</section>
